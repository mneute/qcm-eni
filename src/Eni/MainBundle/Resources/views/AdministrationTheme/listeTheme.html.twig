{% extends "MainBundle:Layout:layout.html.twig" %}

{% block title %}Liste des thèmes - {{ parent() }}{% endblock %}

{% block js %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/listeTheme.js') }}"></script>
{% endblock %}

{% block contenu %}
    <table class="table table-bordered" id="listeThemes">
        <thead>
            <tr>
                <th class="col-sm-2">Suppression</th>
                <th class="col-sm-10">Libellé</th>
            </tr>
        </thead>
        <tbody>
            {% for oTheme in toTheme %}
                <tr>
                    <td class="colSupprimerTheme">
                        <a href="{{ path('confirmationSuppressionTheme', {'id': oTheme.id} ) }}" title="Supprimer">
                            <span class="glyphicon glyphicon-remove"></span>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('modifAjoutTheme', {'id': oTheme.id}) }}" class="">{{ oTheme.libelle }}</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('modifAjoutTheme', {'id': -1}) }}" type="button" id="btnAjouterTheme" class="btn btn-primary">Ajouter un nouveau thème</a>
    
    
    {# Modal #}
    <div class="modal fade" id="modalConfirmationSuppressionTheme" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
            </div>
        </div>
    </div>
{% endblock %}
